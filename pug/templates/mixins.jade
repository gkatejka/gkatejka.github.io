mixin book
  a(href='#')
    .media
      .media-left
        img.pull-left(src='http://placehold.it/40x60', width='50', height='65', alt='')
      .media-body
        b 7 навыков высокоэффективных людей
          br
        .progress
          .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style="width:35%")
        small Прочитать 0 – 50%


mixin posts(postTitle, postText)
  article
    h2.h2=postTitle
    .posts-text
      p=postText


mixin posts-sutitle(postTitle, postSubtitle, postText)
  article
    h2.h2=postTitle
    p.posts-sutitle=postSubtitle
    .posts-text
      p=postText


mixin editpanel(title, btnText)
  .edit-panel
    .container.clearfix
      p.pull-left= title
      button.btn.btn-default.pull-right= btnText
  hr

//- Успехи пользователя
mixin user-success(numImg, bookName, bookAuthor, num1, num2, num3, num4, num5)
  tr
    td.user-rating-book
      a.media(href='')
        .media-left
          img(src='assets/img/book-thumb-#{numImg}.png', width='48', height='69', alt='')
        .media-body
          .media-book-name=bookName
          .media-book-author=bookAuthor
    td=num1
    td=num2
    td=num3
    td=num4
    td=num5

//- Рейтинг пользователей
mixin rating(num, personName, personRead, ratingStep, ratingAll)
  tr
    td.rating-person
      a(href='user.html')
        table
          tr
            td=num
            td.rating-person-img
              img(src='assets/img/person-#{num}.jpg', alt='')
            td.rating-person-about
              .rating-person-name= personName
              .rating-person-read= personRead
            td.rating-points-step= ratingStep
            td.rating-points-all= ratingAll


//- Рейтинг пользователей (админ) - активен
mixin rating-users-active(userId1, userName1, userPoints1, userWorks1)
  tr
    td(colspan="5")
      a(href='user.html')
        table.users-table-row
          tr
            td.users-table-id= userId1
            td.users-table-user
              span.users-table-img
                img(src='http://placehold.it/34x34', width='34', height='34', alt='')
              span.users-table-name=userName1
            td.users-table-status
              .label.label-success активен
            td.users-table-points=userPoints1
            td.users-table-works=userWorks1

//- Рейтинг пользователей (админ) - неактивен
