//- Программа > Этап > Неделя > шаг
mixin program-week-step(bookTitle, stepType, stepStatus, stepPoints, stepText)
  tr
    td.program-week-book=bookTitle
    td.program-week-type=stepType
    td.program-week-status=stepStatus
    td.program-week-points=stepPoints
    td.program-week-descr=stepText
    td.program-week-btn
      a.btn-edit(href='task-edit.html') Редактировать

